{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "OrderManager API - Back-end",
    "description": "The OrderManager API helps your restaurant manage its orders."
  },
  "paths": {
    "/extras": {
      "get": {
        "summary": "Get Extras",
        "description": "Fetches all available extras",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/code": {
      "get": {
        "summary": "Get Order Code",
        "description": "Generates a code for the order",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/orders": {
      "post": {
        "summary": "Place Order",
        "description": "Creates a new order",
        "requestBody": {
          "description": "Order payload",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ReceivedOrder"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreatedOrderResponse"
                }
              }
            }
          }
        }
      }
    },
    "/products": {
      "get": {
        "summary": "Get Products",
        "description": "Fetches all available products",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ReceivedOrder": {
        "type": "object",
        "properties": {
          "clientName": {
            "type": "string"
          },
          "discount": {
            "type": "integer"
          },
          "orderStatus": {
            "type": "string",
            "enum": ["CANCELED", "PROCESSING", "READY"]
          },
          "paymentMethod": {
            "type": "string",
            "enum": ["CREDITCARD", "DEBITCARD", "CASH"]
          },
          "itens": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Item"
            }
          }
        }
      },
      "Item": {
        "type": "object",
        "properties": {
          "note": {
            "type": "string"
          },
          "productId": {
            "type": "integer"
          },
          "quantity": {
            "type": "integer"
          },
          "extras": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Extra"
            }
          },
          "paidPrice": {
            "type": "integer"
          }
        }
      },
      "Extra": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "price": {
            "type": "integer"
          },
          "productType": {
            "type": "string",
            "enum": ["BURGUER", "DRINK", "DESSERT", "SIDEDISHE"]
          },
          "discount": {
            "type": "integer"
          },
          "isAvaiable": {
            "type": "boolean"
          },
          "image": {
            "type": "string"
          }
        }
      },
      "CreatedOrderResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer"
          }
        }
      }
    }
  }
}